---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="portfolio application" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="z-50 fixed top-0 h-10 left-0 w-full bg-white/30 backdrop-blur-md shadow-md border-b-2">
			<div class="mx-auto">
			</div>	
		</nav>
		<slot />
	</body>
</html>